{
  "name": "@msobiecki/react-modal",
  "version": "1.0.12",
  "private": false,
  "description": "A beautiful, materialized and flexible React Modal component",
  "keywords": [
    "modal",
    "react-modal"
  ],
  "homepage": "https://msobiecki.github.io/react-modal/",
  "bugs": {
    "url": "https://github.com/msobiecki/react-modal/issues"
  },
  "repository": {
    "url": "git://git@github.com:msobiecki/react-modal.git"
  },
  "license": "MIT",
  "author": "Micha≈Ç Sobiecki <kontakt@codeshaker.pl>",
  "main": "dist/js/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/js/index.d.ts",
  "scripts": {
    "test": "react-scripts test",
    "build:lib": "npm run build:babel && npm run build:types && node ./scripts/copyTS.js",
    "build:babel": "concurrently \"npm run build:babel:esm && npm run build:babel:umd\" \"npm run build:babel:cjs\"",
    "build:babel:cjs": "cross-env BABEL_ENV=cjs babel --source-maps --extensions \".js,.ts,.tsx\" src --out-dir dist/js --presets=@babel/env",
    "build:babel:esm": "cross-env BABEL_ENV=esm babel --source-maps --extensions \".js,.ts,.tsx\" src --out-dir dist/esm",
    "build:babel:umd": "cross-env BABEL_ENV=umd babel --source-maps --extensions \".js\" dist/esm --out-dir dist/umd --plugins=transform-es2015-modules-umd",
    "build:types": "tsc -p tsconfig.gen-dts.json",
    "clean": "rimraf dist",
    "develop": "npm run build:types && npm run build:babel:esm --skip-initial-build --watch --verbose",
    "storybook": "start-storybook -p 9009",
    "build-storybook": "build-storybook -o docs",
    "clean-storybook": "rimraf docs"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "dependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.2",
    "@types/prop-types": "^15.7.4",
    "@types/react": "^16.14.15",
    "@types/react-dom": "^16.9.14",
    "@types/styled-components": "^5.1.14",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^4.0.3",
    "styled-components": "^5.3.1",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-export-default-from": "^7.14.5",
    "@babel/plugin-transform-typescript": "^7.15.4",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@storybook/addon-actions": "^6.4.0-alpha.38",
    "@storybook/addon-docs": "^6.4.0-alpha.38",
    "@storybook/addon-essentials": "^6.4.0-alpha.38",
    "@storybook/addon-links": "^6.4.0-alpha.38",
    "@storybook/addons": "^6.4.0-alpha.38",
    "@storybook/builder-webpack5": "^6.4.0-alpha.38",
    "@storybook/manager-webpack5": "^6.4.0-alpha.38",
    "@storybook/node-logger": "^6.4.0-alpha.38",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.4.0-alpha.38",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "babel-loader": "8.2.2",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-typescript-to-proptypes": "^1.4.2",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.53.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
